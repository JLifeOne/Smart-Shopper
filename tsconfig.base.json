{
  "compilerOptions": {
    "target": "ES2021",
    "module": "ESNext",
    "moduleResolution": "Node",
    "lib": ["ES2021", "DOM"],
    "importHelpers": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "noEmit": true,
    "strict": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@smart-shopper/core": ["packages/core/src/index.ts"],
      "@smart-shopper/core/*": ["packages/core/src/*"],
      "@smart-shopper/theming": ["packages/theme/src/index.ts"],
      "@smart-shopper/theming/*": ["packages/theme/src/*"],
      "@smart-shopper/ui": ["packages/ui/src/index.tsx"],
      "@smart-shopper/ui/*": ["packages/ui/src/*"]
    }
  }
}
