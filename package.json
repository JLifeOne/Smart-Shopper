{
  "name": "smart-shopper",
  "version": "0.1.0",
  "private": true,
  "description": "Smart Shopper monorepo",
  "type": "module",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "echo \"Run workspace apps with pnpm --filter @smart-shopper/mobile start\"",
    "build": "echo \"Define build pipeline in individual packages\"",
    "lint": "echo \"Linting configured per package\"",
    "test": "echo \"Add test runner once packages are initialized\"",
    "typecheck": "pnpm --filter @smart-shopper/mobile typecheck",
    "sanity": "python scripts/jsx_sanity_check.py",
    "verify": "pnpm -r typecheck && python scripts/jsx_sanity_check.py"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/JLifeOne/Smart-Shopper.git"
  },
  "license": "MIT",
  "devDependencies": {
    "@babel/runtime": "^7.28.4"
  },
  "pnpm": {
    "overrides": {
      "@babel/runtime": "^7.28.4"
    },
    "patchedDependencies": {
      "expo-image-picker@15.0.7": "patches/expo-image-picker@15.0.7.patch"
    }
  }
}
